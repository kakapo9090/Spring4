<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.s4.board.notice.NoticeDAO">
	<select id="getList" resultType="NoticeDTO">
		SELECT * FROM NOTICE
	</select>
	
	
	<select id="getSelect" parameterType="BoardDTO" resultType="NoticeDTO">
		SELECT * FROM NOTICE WHERE NUM=#{num}
	</select>
	
	<insert id="setInsert" parameterType="BoardDTO">
		INSERT INTO NOTICE(num, title, contents, writer, regDate, hits)
		VALUES(NOTICE_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, sysdate, 0)
	</insert>
	
	<delete id="setDelete" parameterType="BoardDTO">
		DELETE FROM NOTICE WHERE NUM=#{num}
	</delete>
	
	<update id="setUpdate" parameterType="BoardDTO">
		UPDATE NOTICE SET title=#{title}, contents=#{contents}, writer=#{writer} 
  		WHERE num=#{num}
	</update>
  </mapper>